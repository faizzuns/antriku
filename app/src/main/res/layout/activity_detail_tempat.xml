<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.user.qroom.DetailTempatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/test2"
            android:scaleType="fitXY"
            android:id="@+id/img_detail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rumah Sakit Ibu dan Anak"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:id="@+id/judul_detail"
                android:textSize="22sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_location"
                    android:id="@+id/img_loc_detail"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan Bagusrangin no 69, Lebak Siliwangi, Coblong"
                    android:layout_toRightOf="@+id/img_loc_detail"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/txt_loc_detail"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="08.00 - 20.00"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/txt_jam_detail"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_info_detail"
                android:text="Info"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Antrian :"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_detail"></Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat tentang antrian tersebut"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:id="@+id/deskripsi_detail"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antrian saat ini :"
                    android:textColor="@android:color/black"
                    android:id="@+id/tx1"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tx1"
                    android:text="70"
                    android:textColor="@android:color/black"
                    android:id="@+id/nmr_sekarang_detail"
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambil Nomor Antrian"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="76"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="50sp"
                android:id="@+id/txt_ambil_antrian_detail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 mins"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/estimasi_detail"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Ambil"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:id="@+id/btn_ambil_detail"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
