<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@android:color/white"
    android:layout_marginBottom="15dp"
    android:id="@+id/list">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/img_list"
        android:src="@drawable/test2"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/judul_list"
            android:text="Gedung Sate"
            android:textStyle="bold"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalan Bagusrangin I nomor 69, Lebak Siliwangi, Coblong, Bandung Jawa Barat."
            android:layout_marginTop="5dp"
            android:id="@+id/lokasi_list"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08.00 - 21.00"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/jam_list"
            android:textSize="15sp"/>
    </LinearLayout>


</LinearLayout>