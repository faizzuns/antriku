<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembuatan E-KTP"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/judul_info"
            android:layout_toLeftOf="@+id/btn_expand_info"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/test1"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_expand_info" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:id="@+id/expand_info">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aduh aduh aduh aduh aduh aduh aduh aduhaduh aduh aduh aduh aduh aduh aduh aduh"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/txt_deskripsi_info"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="masukan ke list"
            android:id="@+id/btn_list_info"/>
    </LinearLayout>

</LinearLayout>